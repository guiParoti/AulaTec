<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtTituloTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título da tarefa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/txtDescricaoTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descrição resumida da tarefa..."
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtStatusTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:background="@drawable/status_background"
            android:text="PENDENTE"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtdiaPrazoTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Prazo da tarefa..."
            android:textColor="#555555"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
