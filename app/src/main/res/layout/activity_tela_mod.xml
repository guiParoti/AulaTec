<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaMod">

    <!-- ========================= -->
    <!--       TÍTULO DA TELA      -->
    <!-- ========================= -->

    <!-- ========================= -->
    <!--   BLOCO DE BOTÕES (DS)    -->
    <!-- ========================= -->

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Módulos e Turmas"
        android:textAllCaps="true"
        android:textColor="#070707"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/containerBotoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintVertical_bias="0.35">

        <Button
            android:id="@+id/btn1modA"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#BF1919"
            android:text="1º DS A"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn1modB"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#3F51B5"
            android:text="1º DS B"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn2modA"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#BF1919"
            android:text="2º DS A"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn2modB"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#3F51B5"
            android:text="2º DS B"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn3mod"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#BF1919"
            android:text="3º DS"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ========================= -->
    <!--       ÍCONE DECORATIVO    -->
    <!-- ========================= -->
    <ImageView
        android:id="@+id/iconNsa2"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linkNsa"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linkGuilherme"
        app:srcCompat="@drawable/linknsa" />

    <!-- ========================= -->
    <!--     BARRA DE NAVEGAÇÃO    -->
    <!-- ========================= -->

</androidx.constraintlayout.widget.ConstraintLayout>
