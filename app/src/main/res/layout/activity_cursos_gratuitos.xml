<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.example.recomendacoes.CursosGratuitos">

    <!-- CONTEÚDO PRINCIPAL -->
    <ScrollView
        android:id="@+id/scrollConteudo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- Curso em Vídeo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaCurso"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cursoemvideo" />

                    <TextView
                        android:id="@+id/txtNomeCurso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Curso em Vídeo"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/txtDescricaoCurso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:textSize="14sp"
                        android:textColor="#333"
                        android:text="O Curso em Vídeo é uma plataforma 100% gratuita criada pelo professor Gustavo Guanabara, amplamente reconhecido pela sua forma clara e divertida de ensinar tecnologia. O site oferece diversos cursos completos em vídeo, voltados para quem quer aprender programação, informática e desenvolvimento web do zero. As aulas são bem estruturadas e fáceis de acompanhar, ideais tanto para iniciantes quanto para quem deseja reforçar seus conhecimentos. O aluno aprende de forma prática, com exemplos, exercícios e conteúdo atualizado. Entre os cursos disponíveis estão Python, Java, HTML5, CSS3, JavaScript, Banco de Dados e Redes de Computadores, todos com acesso livre e sem custo algum para estudar. Embora o aprendizado seja gratuito, o site oferece a opção de adquirir um certificado pago para quem deseja comprovar a conclusão dos cursos. O Curso em Vídeo é uma excelente escolha para quem busca estudar tecnologia de forma acessível, didática e gratuita, com a qualidade de um dos maiores professores da área." />

                    <TextView
                        android:id="@+id/txtLink1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="Acesse: https://www.cursoemvideo.com"
                        android:textColor="#1E88E5"
                        android:autoLink="web" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TIC em Trilhas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaCurso2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/tic_em_trilhas2" />

                    <TextView
                        android:id="@+id/txtNomeCurso2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TIC em Trilhas"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/txtDescricaoCurso2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:textSize="14sp"
                        android:textColor="#333"
                        android:text="O TIC em Trilhas é uma iniciativa nacional de formação gratuita e acessível em tecnologia, parte do projeto Residência em TIC, coordenado pela Softex e apoiado pelo Ministério da Ciência, Tecnologia e Inovação (MCTI). Oferece trilhas de aprendizagem online, híbridas ou presenciais em várias áreas de TIC — como desenvolvimento de software, design, inteligência artificial, desenvolvimento mobile, UX/UI e muito mais. As trilhas incluem conteúdo prático, com atividades reais, orientação de mentores e módulos de estudos no seu próprio ritmo, além de certificados para quem concluir as etapas." />

                    <TextView
                        android:id="@+id/txtLink2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="Acesse: https://ticemtrilhas.org.br/"
                        android:textColor="#1E88E5"
                        android:autoLink="web" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaCurso3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/jornada_do_dev_icon" />

                    <TextView
                        android:id="@+id/txtNomeCurso3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="JORNADA DO DEV"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescricaoCurso3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Jornada do Dev é uma plataforma gratuita de aprendizado voltada para quem quer iniciar ou evoluir na área de programação. Com trilhas de estudos organizadas, aulas em vídeo e desafios práticos, ela ajuda você a aprender de forma estruturada e aplicada.  Além disso, a plataforma oferece projetos reais, comunidade ativa e suporte para tirar dúvidas, tornando o aprendizado mais dinâmico e acessível. Ideal para iniciantes e desenvolvedores que buscam aprimorar suas habilidades sem custo."
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtLink3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:paddingTop="6dp"
                        android:text="Acesse: https://jornadadodev.com.br"
                        android:textColor="#1E88E5" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <!-- BARRA DE NAVEGAÇÃO -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/barra_navegacao" />

</androidx.constraintlayout.widget.ConstraintLayout>
