<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="250dp"
    tools:context="com.example.recomendacoes.EscolherRecomendacoes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-59dp">

        <LinearLayout
            android:layout_width="379dp"
            android:layout_height="275dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecione o tipo de recomendação"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRCursos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0B0B0B"
                android:text="Recomendações de Cursos" />

            <Button
                android:id="@+id/btnRJogos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0B0B0B"
                android:text="Recomendações de Jogos" />

            <Button
                android:id="@+id/btnRFilmes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0B0B0B"
                android:text="Recomendações de Filmes" />

            <Button
                android:id="@+id/btnRApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0B0B0B"
                android:text="Recomendações de Apps" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>