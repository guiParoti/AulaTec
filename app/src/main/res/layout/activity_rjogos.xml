<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.example.recomendacoes.RJogos">

    <!-- CONTEÚDO PRINCIPAL -->
    <ScrollView
        android:id="@+id/scrollConteudo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- Curso em Vídeo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaJogo"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/the_farmer_was_replaced" />

                    <TextView
                        android:id="@+id/txtNomeJogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="THE FARMER was REPLACED()_"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescricaoJogo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="The Farmer Was Replaced é um jogo independente de simulação e automação desenvolvido pela Metaroot. Nele, o jogador assume o papel de um fazendeiro substituído por um drone programável, utilizando uma linguagem de código semelhante ao Python para automatizar tarefas como plantar, regar e colher. O foco do jogo está na lógica e na criação de algoritmos eficientes para gerenciar a fazenda, oferecendo uma experiência educativa e desafiadora ao mesmo tempo.  O título é pago e está disponível para compra na Steam, com suporte a vários idiomas e atualizações que expandem as possibilidades de automação e personalização."
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtPlataformas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:text="Plataforma(s) disponíveis:"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/icone_plataforma"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="icone_steam"
                        android:src="@drawable/icon_steam" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TIC em Trilhas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaJogo2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/franchise_watch_dogs" />

                    <TextView
                        android:id="@+id/txtNomeJogo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Franquia WATCH DOGS"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescricaoJogo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="A franquia Watch Dogs é uma série de jogos de ação e aventura em mundo aberto desenvolvida pela Ubisoft, que explora temas ligados à tecnologia, vigilância digital, cibersegurança e hacktivismo. O jogador assume o papel de diferentes hackers em cada título — como Aiden Pearce, Marcus Holloway e o grupo DedSec — usando dispositivos eletrônicos, drones e sistemas urbanos conectados para manipular o ambiente e combater corporações ou governos corruptos.  Além da narrativa envolvente, Watch Dogs se destaca por sua ambientação realista e pela forma como representa conceitos da vida digital moderna, como redes de dados, sistemas conectados (IoT), privacidade, engenharia social e exploração de vulnerabilidades."
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtPlataformas2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:text="Plataforma(s) disponíveis:"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_icones_plataformas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:paddingTop="4dp">

                        <ImageView
                            android:id="@+id/icon_xbox"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="icone_xbox"
                            android:src="@drawable/icon_steam" />

                        <ImageView
                            android:id="@+id/icon_steam"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="icone_steam"
                            android:src="@drawable/icon_xbox" />

                        <ImageView
                            android:id="@+id/icon_playstation"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/icon_playstation"
                            android:contentDescription="icone_playstation" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaJogo3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/a_turing_complete" />

                    <TextView
                        android:id="@+id/txtNomeJogo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="A TURING COMPLETE"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescricaoJogo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Turing Complete é um jogo pago disponível na Steam que simula a construção de um computador do zero, a partir de portas lógicas e circuitos digitais. O jogador projeta componentes como unidades aritméticas, memórias e processadores, explorando conceitos de arquitetura de computadores, lógica digital e linguagem de montagem.  É uma excelente ferramenta educativa para estudantes de Ciência da Computação, Engenharia e Programação, oferecendo uma forma prática e interativa de compreender os fundamentos da computação."
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtPlataformas3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:text="Plataforma(s) disponíveis:"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_icones_plataformas2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:paddingTop="4dp">

                        <ImageView
                            android:id="@+id/icon_steam1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="icone_steam"
                            android:src="@drawable/icon_steam" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- BARRA DE NAVEGAÇÃO -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/barra_navegacao" />

</androidx.constraintlayout.widget.ConstraintLayout>
