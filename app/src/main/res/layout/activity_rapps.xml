<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.example.recomendacoes.RApps">

    <!-- CONTEÚDO PRINCIPAL -->
    <ScrollView
        android:id="@+id/scrollConteudo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- Curso em Vídeo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaApp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/mimo" />

                    <TextView
                        android:id="@+id/txtNomeApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="MIMO"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescricaoApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Mimo é um aplicativo educativo voltado para quem deseja aprender programação de forma prática e acessível. A plataforma oferece cursos interativos em diversas linguagens, como Python, JavaScript, HTML, CSS e SQL, além de tópicos sobre desenvolvimento de sites, aplicativos e fundamentos da ciência da computação.  Com lições curtas, desafios de código e um sistema de progressão semelhante a jogos, o Mimo torna o aprendizado dinâmico e motivador, mesmo para iniciantes. É uma excelente opção para quem está começando na área de programação ou tecnologia da informação, pois permite praticar diretamente no celular e desenvolver habilidades essenciais para o mercado digital atual."
                        android:textColor="#333"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TIC em Trilhas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaApp2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/dcoder" />

                    <TextView
                        android:id="@+id/txtNomeApp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Dcoder"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescricaoApp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Dcoder é um aplicativo de desenvolvimento e aprendizado de programação que transforma seu celular em um verdadeiro ambiente de codificação. Ele permite escrever, compilar e executar códigos em mais de 50 linguagens de programação, incluindo Python, C++, Java, JavaScript, PHP e muitas outras.  Com uma interface limpa e intuitiva, o Dcoder é ideal tanto para estudantes quanto para profissionais que desejam praticar lógica, resolver desafios de programação ou testar pequenos trechos de código em qualquer lugar. O app também oferece recursos como destaque de sintaxe, suporte a múltiplos temas, terminal embutido e integração com plataformas de aprendizado."
                        android:textColor="#333"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- BARRA DE NAVEGAÇÃO -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/barra_navegacao" />

</androidx.constraintlayout.widget.ConstraintLayout>
