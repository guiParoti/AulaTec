<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.example.recomendacoes.RFilmes">

    <!-- CONTEÚDO PRINCIPAL -->
    <ScrollView
        android:id="@+id/scrollConteudo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- Curso em Vídeo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaFilme"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/a_rede_social" />

                    <TextView
                        android:id="@+id/txtNomeFilme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="A Rede Social"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescricaoFilme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Lançado em 2010 e dirigido por David Fincher, A Rede Social narra a trajetória de Mark Zuckerberg, um estudante de Harvard que, a partir de uma ideia simples e algumas linhas de código, cria o Facebook — uma rede social que rapidamente se torna um fenômeno mundial. A história mostra o crescimento vertiginoso da plataforma e os conflitos que surgem à medida que o sucesso atrai reconhecimento, inveja e batalhas legais entre antigos amigos e parceiros.  O filme destaca temas como ambição, genialidade e as consequências do avanço tecnológico, apresentando de forma envolvente os bastidores da criação de uma das maiores empresas da era digital. Para quem é da área de programação ou tecnologia da informação, A Rede Social é especialmente interessante por mostrar o lado técnico e empreendedor do desenvolvimento de software, a importância da inovação e como decisões tomadas no código e na gestão podem impactar o mundo inteiro."
                        android:textColor="#333"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TIC em Trilhas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaFilme2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/o_jogo_da_imitacao" />

                    <TextView
                        android:id="@+id/txtNomeFilme2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="O Jogo da IMITAÇÃO"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescricaoFilme2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Lançado em 2014 e dirigido por Morten Tyldum, O Jogo da Imitação é baseado na história real de Alan Turing, o brilhante matemático e criptógrafo britânico que liderou uma equipe de especialistas durante a Segunda Guerra Mundial para decifrar o código Enigma, usado pela Alemanha nazista. A trama mostra o esforço incansável de Turing em construir uma máquina capaz de processar informações em alta velocidade — um dos primeiros passos rumo ao que conhecemos hoje como computação moderna.  O filme combina drama histórico e genialidade científica, explorando tanto o impacto das descobertas de Turing quanto os desafios pessoais e sociais que ele enfrentou. Para quem é da área de programação ou tecnologia da informação, O Jogo da Imitação é especialmente fascinante, pois mostra as origens da lógica computacional, o raciocínio por trás dos algoritmos e o poder da mente humana em transformar códigos em soluções que mudam o mundo."
                        android:textColor="#333"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/capaFilme3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/os_estagiarios_2" />

                    <TextView
                        android:id="@+id/txtNomeFilme3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Os Estagiários"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtDescricaoFilme3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="Lançado em 2013, Os Estagiários acompanha dois vendedores experientes que veem suas carreiras desmoronar diante do avanço da tecnologia. Em uma tentativa ousada de recomeço, eles se inscrevem para um estágio no Google — mesmo sem entender nada de programação.  Durante a disputa com jovens talentos de T.I., os dois enfrentam desafios de lógica, trabalho em equipe e diversas situações cômicas que evidenciam o contraste entre gerações e o poder da adaptação."
                        android:textColor="#333"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- BARRA DE NAVEGAÇÃO -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/barra_navegacao" />

</androidx.constraintlayout.widget.ConstraintLayout>
